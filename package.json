{
  "name": "quiz",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "preview": "astro preview",
    "dev": "astro dev --host -- --mode development",
    "build": "astro check && astro build -- --mode production",
    "astro": "astro",
    "lint": "eslint --fix \"src/**/*.{js,ts,jsx,tsx,astro}\" .\nstylelint --fix \"src/**/*.{css,scss,sass,html,vue}\" .\nprettier --write \"src/**/*.{js,ts,jsx,tsx,astro}\"",
    "test": "vitest --run --passWithNoTests",
    "coverage": "vitest run --coverage",
    "prepare": "npx husky install",
    "db:seed": "npx tsx src/seedQuestions.ts",
    "bot:dev": "npx tsx functions/bot/index.ts"
  },
  "dependencies": {
    "@astrojs/netlify": "^6.2.5",
    "@astrojs/react": "^4.2.3",
    "@hookform/resolvers": "^5.0.1",
    "@lucia-auth/adapter-drizzle": "^1.1.0",
    "@nanostores/react": "^1.0.0",
    "@neondatabase/serverless": "^1.0.0",
    "@tailwindcss/vite": "^4.1.3",
    "astro": "^5.6.1",
    "classnames": "^2.5.1",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.41.0",
    "lucia": "^3.2.2",
    "nanostores": "^1.0.1",
    "nodemailer": "^6.10.1",
    "oslo": "^1.2.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.55.0",
    "tailwindcss": "^4.1.3",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@testing-library/react": "^16.3.0",
    "@types/dotenv-safe": "^8.1.6",
    "@types/node": "^22.14.1",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.1.1",
    "@types/react-dom": "^19.1.2",
    "@typescript-eslint/eslint-plugin": "^8.29.1",
    "@typescript-eslint/parser": "^8.29.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.1.1",
    "astro-eslint-parser": "^1.2.2",
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-config-stylelint": "^24.0.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "happy-dom": "^17.4.4",
    "husky": "^8.0.0",
    "postcss-html": "^1.8.0",
    "prettier": "^3.5.3",
    "prettier-config-standard": "^7.0.0",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^16.18.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1",
    "vitest": "^3.1.1"
  },
  "lint-staged": {
    "*.{ts,tsx,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css, astro}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.test": "npm run test"
  },
  "optionalDependencies": {
    "@rollup/rollup-darwin-arm64": "^4.28.1",
    "@rollup/rollup-linux-x64-gnu": "^4.28.1"
  }
}
